---
const {equipo} = Astro.props;

---

<section class="team-section fade-wrapper">
    <div class="container">
        <div class="section-heading text-center">
            <h4 class="sub-heading" data-text-animation="fade-in" data-duration="1.5">Miembros del Equipo</h4>
            <h2 class="section-title" data-text-animation data-split="word" data-duration="1">¡Nuestro Equipo Experto Está Listo para Ayudarte!</h2>
        </div>
        <div class="row gy-lg-0 gy-5">
            {
                equipo.map( (equipo:any) => (
                <div class="col-lg-3 col-md-6">
                    <div class="team-item fade-top">
                        <div class="team-thumb">
                            <div class="gradient-color"></div>
                            <img src={equipo.image} alt="equipo"/>
                            <ul class="team-social-2">
                                <li class="facebook">
                                    <a href={equipo.socialLinks.facebook} ><i class="fab fa-facebook-f"></i></a>
                                </li>
                                <li class="twitter">
                                    <a href={equipo.socialLinks.twitter} ><i class="fab fa-twitter"></i></a>
                                </li>
                                <li class="instagram">
                                    <a href={equipo.socialLinks.instagram} ><i class="fab fa-instagram"></i></a>
                                </li>
                            </ul>
                        </div>
                        <div class="team-content">
                            <h3 class="title"><a >{equipo.name}</a></h3>
                            <span>{equipo.position}</span>
                        </div>
                    </div>
                </div>
                ))
            }
        </div>
    </div>
</section>
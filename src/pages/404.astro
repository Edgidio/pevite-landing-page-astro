---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/shared/footer.astro"
import SidebarArea from "../components/shared/sidebar-area.astro";
import Preloader from "../components/shared/preloader.astro";
import HeaderTwo from "../components/shared/headerTwo.astro";
import Image from "astro/components/Image.astro";
---

<Layout title="Pagina no encontrada">
    <!-- header-area-start -->
    <HeaderTwo></HeaderOne>
    <!-- /.Main Header -->

    <div id="popup-search-box">
        <div class="box-inner-wrap d-flex align-items-center">
            <form id="form" action="#" method="get" role="search">
                <input id="popup-search" type="text" name="s" placeholder="Type keywords here...">
            </form>
            <div class="search-close"><i class="fa-sharp fa-regular fa-xmark"></i></div>
        </div>
    </div>
    <!-- /#popup-search-box -->

    <SidebarArea></SidebarArea>
    <!--/.sidebar-area-->

    <Preloader></Preloader>
    <!-- ./ preloader -->

    <div id="smooth-wrapper">
        <div id="smooth-content">

        <section class="page-header" data-background="/assets/img/bg-img/page-header-bg-404.jpg">
            <div class="overlay"></div>
            <div class="shapes">
                <div class="shape shape-1"><Image loading="eager" width={630} height={541} src="/assets/img/shapes/page-header-shape-1.png" alt="shape"></div>
                <div class="shape shape-2"><Image loading="eager" width={240} height={378} src="/assets/img/shapes/page-header-shape-2.png" alt="shape"></div>
                <div class="shape shape-3"><Image loading="eager" width={767} height={541} src="/assets/img/shapes/page-header-shape-3.png" alt="shape"></div>
            </div>
            <div class="container">
                <div class="page-header-content text-center">
                    <h1 class="title">Página no encontrada</h1>
                    <h4 class="sub-title"><div style="display: inline-block;" class="home">Volver al inicio </div><a class="inner-page" href="/">Inicio</a></h4>
                </div>
            </div>
        </section>
        <!-- ./ page-header -->

        <section class="error-section pt-130 pb-130">
            <div class="container">
                <div class="error-content text-center">
                    <h2 class="text">Oops! <span>Página no encontrada</span></h2>
                    <Image width={1131} height={545} loading="lazy" src="/assets/img/images/error-img.png" alt="img">
                </div>
            </div>
        </section>
        <!-- ./ error-section -->

        <Footer></Footer>
        <!-- ./ footer-section -->

        </div>
    </div>
</Layout>